# http://editorconfig.org
root = true

[*]
charset = utf8
end_of_line = lf
indent_size = 2
indent_style = space
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
max_line_length = 0
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
indent_size = 8

[COMMIT_EDITMSG]
max_line_length = 0
